<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:background="@drawable/bgcadastro"
            tools:context="com.example.luiz1.nocash.CadastroActivity">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="75dp"
                android:textColorHint="#ffffff"

                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtnome"

                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:hint="Nome *"
                    android:singleLine="true"
                   ></android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="145dp"
                android:textColorHint="#ffffff"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtmail"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="E-Mail *"
                    android:singleLine="true">

                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutCpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="210dp"
                android:textColorHint="#ffffff"

                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtcpf"
                    android:layout_width="280dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="CPF *"
                    android:singleLine="true">

                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutRg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="280dp"
                android:textColorHint="#ffffff"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtrg"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="RG *"
                    android:inputType="number"
                    android:singleLine="true">

                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutCep"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="350dp"
                android:inputType="number"
                android:textColorHint="#ffffff"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtcep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CEP *"
                    android:inputType="number"
                    android:singleLine="true">


                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btncep"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_alignStart="@+id/textInputLayoutNumero"
                android:layout_below="@+id/textInputLayoutRg"
                android:layout_gravity="center"
                android:background="#009926"
                android:text="Buscar cep" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutEndereco"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="400dp"
                android:textColorHint="#ffffff"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtendereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Endereço *"
                    android:singleLine="true">

                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutNumero"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="245dp"
                android:layout_marginTop="400dp"
                android:textColorHint="#ffffff"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtnumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="N° *"
                    android:singleLine="true">

                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutComplemento"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="450dp"
                android:textColorHint="#ffffff"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtcompcad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Complemento"
                    android:singleLine="true">

                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutLoginCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="500dp"
                android:textColorHint="#ffffff"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtlogincad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Login *"
                    android:singleLine="true">

                </android.support.design.widget.TextInputEditText>


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutSenhaCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="550dp"
                android:textColorHint="#ffffff"
                android:inputType="textPassword"
                android:padding="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtsenhacad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Senha *"
                    android:singleLine="true">


                </android.support.design.widget.TextInputEditText>


            <Button
                    android:id="@+id/btnsubmit"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#009926"

                    android:text="Entrar" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btncep"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textInputLayoutNome"
                android:layout_marginTop="35dp"
                android:text="Preencha os campos abaixo:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>