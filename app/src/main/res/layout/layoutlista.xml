<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        android:padding="30dp">

        <ImageView
            android:id="@+id/imgitem"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:transitionName="imgitemtrans"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/nomeprod"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/imgitem"
            android:layout_toRightOf="@+id/imgitem"
            android:text="Nome da promoção"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/descpromo"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:layout_toEndOf="@+id/imgitem"
            android:text="Descrição da promoção"
            android:textSize="16dp" />




    </RelativeLayout>
    
    
</LinearLayout>
