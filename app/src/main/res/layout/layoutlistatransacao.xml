<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#606060"
        android:layout_marginBottom="5dp"
        android:padding="30dp">


        <TextView
            android:id="@+id/nomeprod"
            android:layout_width="230dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Nome da transação"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/desctrans"
            android:layout_width="220dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nomeprod"
            android:layout_marginTop="12dp"
            android:text="Descrição da transação"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgprodparca"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/nomeprod"
            app:srcCompat="@drawable/blue_button_background" />


    </RelativeLayout>



</LinearLayout>
